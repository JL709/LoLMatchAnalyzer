<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/ListName"
        android:typeface="sans"
        android:textColorLink="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_width="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:id="@+id/ListLP"
        android:typeface="sans"
        android:textColorLink="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginStart="280sp"
        android:layout_marginLeft="280sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:id="@+id/ListWins"
        android:typeface="sans"
        android:textColorLink="@android:color/darker_gray"
        android:textAlignment="center"
        android:layout_marginStart="230sp"
        android:layout_marginLeft="230sp" />

    <ImageView
        app:srcCompat="@drawable/transparent"
        android:id="@+id/ListHotStreakView"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="140sp"
        android:layout_marginLeft="140sp"
        android:contentDescription="Hot Streak or nah" />

    <ImageView
        app:srcCompat="@drawable/transparent"
        android:id="@+id/ListVeteranView"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_marginStart="180sp"
        android:layout_marginLeft="180sp"
        android:contentDescription="Veteran or nah" />

</RelativeLayout>
